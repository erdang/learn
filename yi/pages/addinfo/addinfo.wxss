/* pages/addinfo/addinfo.wxss */
page{background-color: #ff7778;width: 100%;height: 100%;}
.addinfo-head{width: 100%;height: 166rpx; line-height: 166rpx; font-size: 30rpx; color: #fff;text-align: center;}
.addinfo-head text{position: relative;}
.addinfo-head text::before{content: '';position: absolute;width: 120rpx;height: 2rpx;background: #fff;opacity: 0.5;left: -140rpx;top: 50%;}
.addinfo-head text::after{content: '';position: absolute;width: 120rpx;height: 2rpx;background: #fff;opacity: 0.5;right: -140rpx;top: 50%;}
.addinfo-content{width: 680rpx;height: 746rpx;background: #fff;margin: auto;border-radius: 20rpx;}
.addinfo-content-view{padding: 40rpx;}
.addinfo-content-view-1 text{font-size: 34rpx;color: #543030;line-height: 93rpx;}
.addinfo-content-view-1 picker{width: 603rpx; height: 92rpx;border-radius: 14rpx; background: #ffe6e6; line-height: 92rpx;color: #ff6b71; text-align: center;}
.addinfo-content-view-1{height: 224rpx;}
.addinfo-content-view-2 text:nth-of-type(1){font-size: 34rpx;color: #543030;line-height: 93rpx;}
.addinfo-content-view-2 text:nth-of-type(2){font-size: 28rpx;color: #a69999;line-height: 93rpx; margin-left: 14rpx;}
.addinfo-content-view-2 picker{width: 603rpx; height: 92rpx;border-radius: 14rpx; background: #ffe6e6; line-height: 92rpx;color: #ff6b71; text-align: center;}
.addinfo-content-view-2{height: 224rpx;}
.addinfo-button{ width: 682rpx; height: 90rpx; margin: 30rpx auto;}
.addinfo-button button{border-radius: 20rpx; background: #fff; color:#ff6c72;}
.addinfo-button button:active{ background: #ffe6e6; }