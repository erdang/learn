page{background: #ff7779;}
.tab-h{
  height: 98rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 98rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;position: fixed;bottom: 0; left: 0; z-index: 99;background: #ff7779;}
.tab-item{display: inline-block;width: 16rpx; height: 16rpx; border-radius: 50%;background: #fff;opacity: 0.5;}
.tab-item.active{color: #4675F9;position: relative;width: 16rpx; height: 16rpx; border-radius: 50%;background: #fff;opacity: 1;}
.tab-item:nth-of-type(2){margin-left: 20rpx; margin-right: 20rpx;}
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 180rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.tab-content{}
.scoll-h{height: 100%;}
.tab-bs{width: 100rpx; margin: auto;}
.icon-time{width: 100rpx; height: 98rpx; position: absolute; left: 100rpx;top: 0;}
.icon-time image{margin-left: 20rpx; margin-top: 19rpx;width: 60rpx; height: 60rpx;}
.icon-set{width: 100rpx; height: 98rpx; position: absolute; right: 100rpx;top: 0;}
.icon-set image{margin-left: 20rpx; margin-top: 19rpx;width: 60rpx; height: 60rpx;}
/*首页*/
.ls-index{width: 712rpx; height: 1100rpx; background: #fff; margin: 8rpx auto 0 auto;border-radius: 24rpx;}
.cine{width: 610rpx; height: 610rpx; position: relative;  margin:   auto;}
.cine-info{width: 20rpx; height: 20rpx;background: #000;position: absolute;transform-origin:  0 305rpx; left:0; top: 0; border-radius: 10rpx; }
.red{background: red;}
.black{background: black;}
.fo{width: 20rpx; height: 20rpx;background: #ff7f80;position: absolute;transform-origin:  0 305rpx; left:-4rpx; top: -4rpx; border-radius: 50%; border: 4rpx solid #ff7f80;animation:fromBack 1s ease;transform: scale(1);}
.cine-infa{width: 20rpx; height: 20rpx;position: absolute;transform-origin:  0 305rpx; left:305rpx; top: 112rpx; border-radius: 50%; border: 4rpx solid #90ea8d; transition: 0.4s all ease-in-out;}
@keyframes fromBack{
    0%{
       
        opacity: 0;transform-origin: 0 0;
    }
    50%{
      transform: scale(1.2);transform-origin: 10px 10px;
      opacity: 1;
    }
    100%{
       transform: scale(1);transform-origin: 5px 5px;
        opacity: 1;
    }
}
